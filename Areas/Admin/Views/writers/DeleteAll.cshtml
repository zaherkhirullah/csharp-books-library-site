@model IEnumerable<ZHYR_Library.Models.Data.writers>
@{
    ViewBag.Title = "Delete All writers";
}


<h4 class="title">@ViewBag.Title</h4>
<p class="category">New employees on 15th September, 2016</p>
<div class="card-content ">
    <h3>Are you sure you want to delete All writers From Database ?</h3>
    <div>
         @foreach (var writer in Model)
         {
                <div class="card-image pull-left" style="margin:5px; padding:5px; background-color:white;">
                    @if (writer.image != null)
                    {
                        <img src="~/Uploads/images/writers/@writer.image" class="img-rounded" width="150" height="150" />
                    }
                    else
                    {
                        <img src="~/Content/images/Nophoto.png" class="img-rounded" width="150" height="150" />
                    }
                    <div class="card-content">@writer.author_name</div>                
                </div>
             
         }
     <div class="clearfix"></div>
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="DeleteAll" class="btn btn-info" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
        
    </div>
</div>


