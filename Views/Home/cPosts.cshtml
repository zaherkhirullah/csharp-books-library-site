
@model ZHYR_Library.Models.Data.categories

@{
    ViewBag.Title = Model.category_name + " posts";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <header class="section-header text-center">
                <h3 class="section-title">@ViewBag.Title</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing</p>
            </header>
        </div>
    </div>
    <div class="row">
        @if (Model.Posts.Count() == 0)
        {    <div class="alert alert-default  "> <p class="text-center text-danger"> <b>No Posts in This Category</b></p>  </div>
        }
        else
        {
            foreach (var post in Model.Posts)
            {
                <div class="col-sm-3">
                    <div class="card">
                        <div class="card-media">
                            <a href="@Url.Action("post_details","Home",new { id = post.Id })">
                                <figure>
                                    @if (post.image != null)
                                    {
                                        <img src="~/Uploads/images/posts/@post.image" alt="@post.Title" style="height:200px;" class="full-width">
                                    }
                                    else
                                    {
                                        <img src="~/Content/images/Nophoto.png" alt="@post.Title" style="height:200px;" class="full-width">
                                    }
                                </figure>
                            </a>
                        </div>
                        <div class="card-content">
                            <h5 class="title text-center">@post.Title</h5>
                            <p class="text-muted">@post.content</p>
                        </div>
                        <div class="card-footer">
                            <ul class="list-unstyled">
                                <li style="font-size:13px;">
                                    @*<p class="label label-default">
                                            <i class="glyphicon glyphicon-eye-open "></i>:@post.Readed
                                        </p>   &nbsp;
                                        <p class="label label-primary">
                                            <i class="glyphicon glyphicon-hand-up "></i>:@post.Liked
                                        </p>*@
                                </li>
                            </ul>
                            <ul class="meta-list clearfix">
                                <li class="text-muted"><time class="meta" datetime="@post.Created_at">@String.Format("{0:MMM dd,yyyy }", post.Created_at)</time></li>
                                <li><span class="meta">@post.categories.category_name</span></li>
                            </ul>
                            <a href="@Url.Action("post_details","Home",new { id = post.Id })" class="read-more"> More <i class="glyphicon glyphicon-chevron-right"></i></a>
                        </div>
                    </div>
                </div>
            }
            <div style="clear:both;"></div><br />

        }
</div></div>