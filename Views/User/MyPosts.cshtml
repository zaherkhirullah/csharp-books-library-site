@model IEnumerable<ZHYR_Library.Models.Data.Post>

@{
    ViewBag.Title = "MyPosts";
}
    <!-- Section Blog -->
            <section id="blog" class="section blog">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <header class="section-header text-center">
                                <h3 class="section-title">@ViewBag.Title</h3>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing</p>
                            </header>
                        </div>
                    </div>
                    <div class="row">
@if (Model.Count() == 0)
{
    <div class="alert alert-default Non-black">
        <h2> You didn't have Any Posts</h2>
    </div>
}
else
{
    foreach (var post in Model.OrderByDescending(x => x.Created_at))
    {
                            <div class="post">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="post-img pull-left">
                                        <a href="@Url.Action("post_details", "Home", new { id = post.Id })">
                                            <figure>
                                                @if (post.image != null)
                                                {
                                                    <img src="~/Uploads/images/posts/@post.image" alt="@post.Title" class="full-width">
                                                }
                                                else
                                                {
                                                    <img src="~/Content/images/Nophoto.png" alt="image" class="full-width">
                                                }
                                            </figure>
                                        </a>
                                    </div>

                                    <div class="post-content">
                                        <a href="@Url.Action("post_details", "Home", new { id = post.Id })">
                                            <h5 class="title">@post.Title</h5>
                                        </a>
                                        <p>@post.content</p>
                                    </div>
                                    <div class="post-footer">
                                        <ul class="meta-list">
                                            <li><time class="meta" datetime="@post.Created_at">@String.Format("{0:MMM dd,yyyy }", post.Created_at)</time></li>
                                            <li><span class="meta">@post.categories.category_name</span></li>
                                        </ul>
                                        <a href="@Url.Action("post_details", "Home", new { id = post.Id })" class="read-more">Read More</a>
                                    </div>
                                </div>
                            </div>
    }
    <div class="row">
        <div class="col-md-12">
            <footer class="section-footer text-center">
                <h4 class="title">Show More Posts </h4>
                <a href="#" class="btn btn-primary" role="button">More ..</a>
            </footer>
        </div>
    </div>
}
       </div>
                   
                </div>
            </section>
